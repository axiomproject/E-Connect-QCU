{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    // Allow imports from `lib`
    "baseUrl": ".",
    "paths": {
      "lib": [
        "./lib/"
      ]
    }
    
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.ts",
    "vite.config.ts",
    "./backend/**/*.ts",
    "./lib/**/*.ts",
    "index.ts", 
    "backend/**/*.ts"
  ],
  "exclude": ["node_modules", "src/**/*.ts", "src/**/*.vue"]
}
